                                <p class="mbr-step-text mbr-fonts-style display-7" style="color:whitesmoke">
                                    @{
                                        if (Model.Item2.primarnaDjelatnostPoduzeće == null)
                                        {
                                        <p class="mbr-step-text mbr-fonts-style display-7" style="color:whitesmoke">Još ništa...</p>
