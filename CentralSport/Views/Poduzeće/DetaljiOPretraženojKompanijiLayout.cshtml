    <script type="text/javascript">
        $(document).ready(function () {
            InitializeImageSlider();
        });
        function InitializeImageSlider() {
            $('.flexslider').flexslider({
                animation: "slide",
                controlNav: true,
                directionNav: true,
                itemWidth: "50%",
                itemHeight: "50%"
            });
        }
    </script>

    <style>
        .gumb {
            text-align: center;
