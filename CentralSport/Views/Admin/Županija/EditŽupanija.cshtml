@model CentralSportV1._0._1.Models.županije

@{
    ViewBag.Title = "EditŽupanija";
    Layout = "~/Views/Shared/SharedPagesLayout.cshtml";
}

<div class="prijefotera1">
    <br />
    <h2 class="text-md-center" style="color:yellow">Ažuriraj podatke o županiji</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="text-md-center">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idŽupanija)
        </div>

        <div class="form-group">
            <div class="col-md-5" style="margin:auto">
                Ime županije
                @Html.EditorFor(model => model.imeŽupanije, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.imeŽupanije, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 text-md-center">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
    }
</div>
<div class="Boja4">
    <hr />
    <br />

    @Html.ActionLink("Natrag na listu županija", "ŽupanijaManageList")

    <br />
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
