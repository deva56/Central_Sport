@model CentralSportV1._0._1.Models.AdminCreateOdabranoPoduzeće

@{
    ViewBag.Title = "CreateOdabranoPoduzeće";
    Layout = "~/Views/Shared/SharedPagesLayout.cshtml";
}

<div class="prijefotera1">
    @using (Html.BeginForm("CreateOdabranoPoduzeće", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <div class="text-md-center">
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
        </div>

        <h3 class="text-md-center" style="color:blue">Dodajte profilnu sliku</h3>
        <br />

        <div class="form-group">
            <div class="col-md-12 text-md-center" style="margin:auto">
                <input type="file" id="fileLoader" name="ImageFile" style="margin:auto" />
            </div>
        </div>
        <br />

        <div class="form-group">
            <div class="col-md-5" style="margin:auto">
                Ime odabranog poduzeća
                @Html.EditorFor(model => model.imePoduzeća, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.imePoduzeća, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-5" style="margin:auto">
                Opis odabranog poduzeća
                @Html.TextAreaFor(model => model.opisPoduzeća, new { @id = "opisKorisnikaId", @class = "form-control", @style = "resize: none" })
                <div id="counter" class="text-md-right"></div>
                @Html.ValidationMessageFor(model => model.opisPoduzeća, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 text-md-center">
                <input type="submit" value="Dodaj novo poduzeće" class="btn btn-primary" />
            </div>
        </div>
    </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
     }
</div>

<div class="Boja4">
    <hr />
    <br />

    @Html.ActionLink("Natrag na odabrana poduzeća manage panel", "OdabranaPoduzećaPanel")

    <br />
</div>


<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript" src=@Url.Content("/Content/BrojanjeSlova/MaxLength.min.js")></script>

<script type="text/javascript">
    $(function () {
        //Specifying the Character Count control explicitly
        $("[id*=opisKorisnikaId]").MaxLength(
            {
                MaxLength: 5000,
                CharacterCountControl: $('#counter')
            });
    });
</script>